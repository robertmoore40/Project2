<nav>
    <div class="nav-wrapper">
        <ul class="right">
            <li><a id="go-home" class="waves-effect waves-light btn">Home<i
                        class="material-icons small right">home</i></a></li>
            <li><a id="go-search" class="waves-effect waves-light btn">Back to Search<i
                        class="material-icons small left">search</i></a></li>
        </ul>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col s12">
            <h1 id="main-res-title" class="center">Movie Results
            </h1>
        </div>
    </div>


    <div class="container">
        <div class="row flexbox">
            {{#each results}}
            <div data-imdbid="{{imdbID}}" class="card col s5 l2 sticky-action" id="results-card">
                <div class="card-image waves-effect waves-block waves-light">
                    <img id="poster-img" class="activator responsive-img" src="{{Poster}}">
                </div>
                <div id="results-content" class="card-content">

                    <div id="movie-title-div" class="center-align valign-wrapper">
                        <p id="movie-title">{{Title}}</p>
                    </div>

                    <div id="boats-div" class="center-align">
                        {{#if source}}
                        <a id="up-boat"><i class="material-icons small left up-boat"
                                data-imdbid="{{imdbID}}">keyboard_arrow_up</i></a>
                        <span>{{boatsValue}}</span>
                        <a id="down-boat"><i class="material-icons small right down-boat"
                                data-imdbid="{{imdbID}}">keyboard_arrow_down</i></a>
                        {{else}}
                        <a class="waves-effect waves-light btn add-movie" data-imdbid="{{imdbID}}"><i
                                class="material-icons small right">favorite</i>Add</a>
                        {{/if}}
                    </div>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">{{Title}}<i
                            class="material-icons small right">close</i></span>
                    <ul>
                        <li>Year: {{Year}}</li>
                        <li class="rating">Rating: </li>
                        <li class="imdb-link"><a href="https://www.imdb.com/title/{{imdbID}}">IMDB link</a></li>
                        <br>
                        {{!-- <li class = "Genre">Genre: </li> --}}
                        <li class="plot">Plot: </li>

                    </ul>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="/js/searchMovie.js"></script>